@model IEnumerable<movie_store.Models.DB.Movie>

@{
  ViewBag.Title = "Index";
}

<h1 class="text-md-center">All Movies</h1>
<hr />

<div class="card-group mx-1 row row-cols-1 row-cols-md-6">
  @foreach (var item in Model)
  {
    <div class="col mb-2">
      <div class="card  mx-1" style="width: 18rem; background-color:#222222;">
        <img class="card-img-top" style="height:28rem;" src="@Url.Content(item.ImgUrl)" alt="image" />
        <div class="card-body d-flex flex-column text-light">
          <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
          @*<h6 class="card-text">@Html.DisplayFor(modelItem => item.Plot)</h6>*@
          
          <p class="card-text">Director: @Html.DisplayFor(modelItem => item.Director)</p>
          <p class="card-text">@Html.DisplayFor(modelItem => item.ReleaseYear)</p>
          <h6 class="card-text">Price : @Html.DisplayFor(modelItem => item.Price)</h6>
          <button type="button" class="align-self-end btn btn-md btn-block btn-success" style="margin-top: auto;">Add to Cart</button>
        </div>
      </div>
    </div>
     }
</div>

