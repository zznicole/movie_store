                <div class="col-md-6">
                    <em class="mb-0"><small>New customer?</small></em>
                    <div> @Html.ActionLink("Register and Order", "Register", "Order", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-outline-warning text-light" })</div>
                </div>
                <div class="col-md-6">
                    <em class="mb-0"><small>Already a customer?</small></em>
                    <div> @Html.ActionLink("Confirm Order", "CheckEmail", "Order", null, htmlAttributes: new { @class = "btn btn-outline-warning text-light" }) </div>
                </div>
            </td>*@
        <td class="row m-0">
            <div class="col-md-6">

                <em class="mb-0"><small>New customer?</small></em>
                <div><em class="mb-0"><small>Welcome to our community!</small></em></div>
                <div> @Html.ActionLink("Register To Proceed Your Order", "Create", "Customers", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-outline-warning text-light" })</div>
            </div>
            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                <div><em class="mb-0"><small>Already a customer?</small></em></div>
                <div><em class="mb-0"><small>Enter your registered email.</small></em></div>
                    <p class="text-danger mb-0">@ViewBag.Message</p>
                    @Html.EditorFor(e => e.Email, new { htmlattributes = new { @class = "form-control bg-dark border-bottom border-light text-light "} })
                    <input type="submit" value="Login To Proceed Your Order" class="btn btn-outline-warning text-light mt-md-1" />
                }
                
            </div>
        </td>
    </tr>


</table>


