@model movie_store.ViewModels.CartListViewModel
@{
    ViewBag.Title = "DisplayCart";
}

<h2 class="text-md-center mb-md-3">Your Shopping Cart</h2>
<table class="table offset-md-0 offset-lg-2 col-md-12 col-lg-8 text-light">
    <tr>
        <th>Title</th>
        <th>Price</th>
        <th>No of Copies</th>
        <th>Sub Total</th>
    </tr>
    @foreach(var item in Model.CartMovies)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    <a href="#" onclick="location.href = '@Url.Action("RemoveFromCart",new { title = item.Title })'"><i class="fa fa-minus-square-o text-danger"></i></a>
                    @item.CopyAmount
                    <a href="#" onclick="location.href = '@Url.Action("AddToCart",new { title = item.Title })'"><i class="fa fa-plus-square-o text-success"></i></a>
                </td>
                <td>
                    @item.TotalPriceOfMovie
                </td>
            </tr>
        }
        <tr>
            <td>
                Shopping Cart Total: @Model.TotalPriceInCart
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Continue Shopping","Index","Movies",null, htmlAttributes: new {@class="btn btn-outline-warning text-light mt-md-3"})
            </td>
        </tr>
</table>